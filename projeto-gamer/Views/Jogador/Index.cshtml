@model Jogador
@{
    ViewData["Title"] = "Equipe";
}

<h1>Tabela Jogadores</h1>

<form method="post" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">

 <label for="">Nome</label>
    <input type="text" name="Nome" required>

    <label for="">Email</label>
    <input type="email" name="Email">

    <label for="">Imagem</label>
    <input type="file" name="Imagem">

    <button type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Imagem</th>
    </thead>

    <tbody>

        @foreach (Jogador jogador in ViewBag.Equipe)
        {
                <tr>
                    <td>@jogador.IdJogador</td>
                    <td>@jogador.Nome</td>
                    <td>@jogador.Email</td>
                    <td>
                        <img src="/img/Jogador/@jogador." alt="Imagem do jogador/Jogador @jogador.Nome" width="50px">
                    </td>

                    <td>
                        <a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@jogador.IdJogador">Excluir</a>
                    </td>
                    <td>
                        <a asp-area="" asp-controller="Equipe" asp-action="Editar" asp-route-id="@jogador.IdJogador">Editar</a>
                    </td>
                </tr> 
        }

    </tbody>
</table>

